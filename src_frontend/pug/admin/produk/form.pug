extends ../layout.pug

block content
  section
    a.inline-flex.items-center.px-5.mb-4.text-sm.font-medium.text-gray-500.bg-white.rounded-lg.border.border-gray-300(type='button' href='/admin/produk' class='py-2.5 focus:ring-4 focus:ring-primary-200 hover:bg-gray-50')
      | Back
    .bg-white.py-8.px-10.mx-auto.max-w-2xl.shadow-md
      h2.mb-4.text-xl.font-bold.text-gray-900 !{edit ? 'Edit Jenis Produk' : 'Tambah Jenis Produk'}
      form(action=(edit ?  `/admin/produk/${data.id}?_method=PUT` : '/admin/produk/') method='POST')
        .grid.gap-4(class='sm:grid-cols-2 sm:gap-6')
          .w-full.grid-cols-2(class="lg:grid-cols-1")
            label.block.mb-2.text-sm.font-medium.text-gray-900(for='name') Nama
            input#name.bg-gray-50.border.border-gray-300.text-gray-900.text-sm.rounded-lg.block.w-full(type='text' name='name' class='focus:ring-primary-600 focus:border-primary-600 p-2.5' placeholder='Nama jenis produk' required='' value=edit?data.name:'')
          .w-full.grid-cols-2(class="xl:grid-cols-1")
            label.block.mb-2.text-sm.font-medium.text-gray-900(for='brand') Gaji / Keping
            input#brand.bg-gray-50.border.border-gray-300.text-gray-900.text-sm.rounded-lg.block.w-full(type='text' name='salary' class='focus:ring-primary-600 focus:border-primary-600 p-2.5' placeholder='Gaji' required='' value=edit?data.salary:'')
