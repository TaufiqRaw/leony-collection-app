extends ../layout.pug

block content
  section
    a.inline-flex.items-center.px-5.mb-4.text-sm.font-medium.text-gray-500.bg-white.rounded-lg.border.border-gray-300(type='button' href='/admin/user' class='py-2.5 focus:ring-4 focus:ring-primary-200 hover:bg-gray-50')
      | Back
    .bg-white.py-8.px-10.mx-auto.max-w-2xl.shadow-md
      h2.mb-4.text-xl.font-bold.text-gray-900 !{edit ? 'Edit User' : 'Tambah User'}
      form(action=(edit ?  `/admin/user/${data.id}?_method=PUT` : '/admin/user/') enctype="multipart/form-data" method='POST')
        .grid.gap-4(class='sm:grid-cols-2 sm:gap-6')
          .w-full.col-span-2
            label.block.mb-2.text-sm.font-medium.text-gray-900(for='image') Foto !{edit ? '(biarkan kosong jika tidak ingin mengubah foto)' : ''}
            input#image.bg-gray-50.border.border-gray-300.text-gray-900.text-sm.rounded-lg.block.w-full(type='file' name='foto' class='focus:ring-primary-600 focus:border-primary-600 p-2.5' placeholder='Foto' accept='image/*')
          .w-full.col-span-2(class="lg:col-span-1")
            label.block.mb-2.text-sm.font-medium.text-gray-900(for='name') Nama
            input#name.bg-gray-50.border.border-gray-300.text-gray-900.text-sm.rounded-lg.block.w-full(type='text' name='name' class='focus:ring-primary-600 focus:border-primary-600 p-2.5' placeholder='Nama jenis produk' value=edit?data.name:'')
          .w-full.col-span-2(class="xl:col-span-1")
            label.block.mb-2.text-sm.font-medium.text-gray-900(for='brand') Password
            input#brand.bg-gray-50.border.border-gray-300.text-gray-900.text-sm.rounded-lg.block.w-full(type='text' name='password' class='focus:ring-primary-600 focus:border-primary-600 p-2.5' placeholder=!edit ? 'password' : 'biarkan kosong jika tidak ingin mengubah password')
        button.inline-flex.items-center.px-5.mt-4.text-sm.font-medium.text-center.text-white.bg-primary.rounded-lg(type='submit' class='py-2.5 sm:mt-6 focus:ring-4 focus:ring-primary-200 hover:bg-primary')
          | Submit
